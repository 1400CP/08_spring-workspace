	<h2>중앙선거관리위원회 코드정보 - 정당정보</h2>
	<input type="button" value="조회하기" id="btn2">
	
	<div id="result2">
		<table id="table1" border="1" >
			<thead>
				<tr>
					<th>선거아이디</th>
					<th>정당명</th>
					<th>순서</th>
				</tr>
			</thead>
			<tbody></tbody>
		</table>
	</div>
	
	<script>
		$(function(){
			$("#btn2").click(function(){
				$.ajax({
					url:"jd.do",
					success:function(data){
						const itemArr = data.response.body.items.item;
						
						let value = "";
						for(let i in itemArr){
							let item = itemArr[i];
							
							value += "<tr>"
								  +		"<td>" + item.sgId + "</td>"
								  +		"<td>" + item.jdName + "</td>"
								  +		"<td>" + item.pOrder + "</td>"
								  +  "</tr>"
								  
							console.log(value);
						}
						
						$("#table1 body").html(value);
						
					},
					error:function(){
						console.log("코드조회실패")
					}
				})
			})	
		})

	</script>
	
	
	
	
